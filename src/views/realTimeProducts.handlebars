<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div class="forms">
    <div>
        <h2>Agrega un producto</h2>
        <form id="prodsForm">
            Title: <input type="text" name="title" id="title" required>
            Description: <input type="text" name="description" id="description" required>
            Price: <input type="number" name="price" id="price" required>
            Stock: <input type="number" name="stock" id="stock" required>
            <input type="submit" value="Send">
        </form>
    </div>
    <div>
        <h2>Elimina el producto</h2>
        <form id="deleteProduct">
            ID: <input type="number" name="id" id="id">
            <input type="submit" value="Delete">
        </form>
    </div>
</div>

<table id="headProducts">
  <h1>Estos son nuestros productos</h1>
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Code</th>
            <th>Thumbnail</th>
            <th>Price</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody id="prodsTable">
        {{#each allProds}}
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>{{code}}</td>
            <td>{{thumbnail}}</td>
            <td>{{price}}</td>
            <td>{{stock}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
  </body>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>
</html>